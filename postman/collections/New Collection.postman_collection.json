      "name": "Create Token",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "id": "8444b945-9f3c-4ab3-8227-99517bd0bc86",
            "exec": [
              "const random = Math.random().toString(36).substring(3);\r",
              "\r",
              "const name = \"Sa\" + random;\r",
              "const email = \"sa\"+ random + \"@gmail.com\"\r",
              "\r",
              "pm.environment.set(\"name\", name);\r",
              "pm.environment.set(\"email\", email);"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        },
        {
          "listen": "test",
          "script": {
            "id": "6971cff7-cf8a-459f-839d-af14a887e087",
            "exec": [
              "const response = pm.response.json();\r",
              "pm.environment.set(\"token\", response.accessToken);\r",
              "console.log(\"token saved\", response.accessToken);\r",
              "\r",
              "pm.test(\"Status code is 201\", () => {\r",
              "    pm.response.to.have.status(201);\r",
              "})\r",
              "\r",
              "pm.test(\"Response body validation\", () => {\r",
              "const JsonData = pm.response.json();\r",
              "    pm.expect(JsonData.accessToken).to.eql(pm.environment.get(\"token\"));\r",
              "})\r",
              "\r",
              "pm.environment.unset(\"email\");\r",
              "pm.environment.unset(\"name\");"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
