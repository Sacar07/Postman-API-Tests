    {
      "name": "List of Books",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "id": "577eff8d-de20-43ec-ac46-eae832e6a087",
            "exec": [
              ""
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        },
        {
          "listen": "test",
          "script": {
            "id": "123a7d56-1ce1-426d-bc1e-2967ac7fc61d",
            "exec": [
              "pm.test(\"Status code is 200\", function () {\r",
              "    pm.response.to.have.status(200);\r",
              "});\r",
              "\r",
              "pm.test(\"response body validation\", () => {\r",
              "    const jsonData = pm.response.json();\r",
              "    jsonData.forEach(el => {\r",
              "        pm.expect(el.id).to.be.a(\"number\");\r",
              "        pm.expect(el.name).to.be.a(\"string\");\r",
              "        pm.expect(el.type).to.be.a(\"string\");\r",
              "        pm.expect(el.available).to.be.a(\"boolean\");\r",
              "    })\r",
              "})\r",
              "\r",
              "//or we can directly do schema validation rather doing above response validations?\r",
              "\r",
              "var schema = {\r",
              "    \"$schema\": \"http://json-schema.org/draft-04/schema#\",\r",
              "    \"type\": \"array\",\r",
              "    \"items\": {\r",
              "        \"type\": \"object\",\r",
              "        \"properties\": {\r",
              "            \"id\": { \"type\": \"integer\" },\r",
              "            \"name\": { \"type\": \"string\" },\r",
              "            \"type\": { \"type\": \"string\" },\r",
              "            \"available\": { \"type\": \"boolean\" }\r",
              "        },\r",
              "        \"required\": [\"id\", \"name\", \"type\", \"available\"]\r",
              "    }\r",
              "};\r",
              "\r",
              "pm.test(\"Response schema is valid\", () => {\r",
              "    const jsonData = pm.response.json();\r",
              "    pm.expect(tv4.validate(jsonData, schema)).to.be.true;\r",
              "})\r",
              ""
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
